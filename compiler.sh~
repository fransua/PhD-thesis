#/bin/bash

pdflatex -draftmode -interaction=nonstopmode --src-specials tex_folder/main > /dev/null 2>&1

bibtex main

pdflatex -draftmode -interaction=nonstopmode --src-specials main > /dev/null 2>&1

makeindex eva.nlo -s nomencl.ist -o main.nls

pdflatex -interaction=nonstopmode --src-specials main


rm *.aux *.bbl *.ilg *.lot *.nlo *.nls *.toc *.out *.lof *.blg *.log 
acroread eva.pdf &

